#!/bin/bash

echo "🔍 Checking for listening ports..."

# Check if 'ss' is available (modern and preferred)
if command -v ss &> /dev/null; then
    echo "Using 'ss' command:"
    ss -tuln | grep LISTEN
elif command -v netstat &> /dev/null; then
    echo "Using 'netstat' command:"
    netstat -tuln | grep LISTEN
else
    echo "Neither 'ss' nor 'netstat' is available on this system."
    exit 1
fi